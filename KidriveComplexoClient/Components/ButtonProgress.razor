<MudButton Variant="@Variant" Color="@Color" FullWidth="@FullWidth" Size="@Size" OnClick="@OnClick">
    @if (Loading)
    {
        <MudProgressCircular Indeterminate="true" Size="Size.Small" Style="@ColorProgressClass" />
    }
    else
    {
        <span>@Title</span>
    }
</MudButton>
@code {
    [Parameter]
    public bool Loading { get; set; } = false;
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public MudBlazor.Color Color { get; set; }
    [Parameter]
    public MudBlazor.Size Size { get; set; }
    [Parameter]
    public MudBlazor.Variant Variant { get; set; }
    [Parameter]
    public bool FullWidth { get; set; }
    [Parameter]
    public string ColorProgress { get; set; }
    [Parameter]
    public EventCallback OnClick { get; set; }

    private string ColorProgressClass { get; set; }

    protected override void OnInitialized()
    {
        ColorProgressClass = $"color:{ColorProgress}";
    }
}
