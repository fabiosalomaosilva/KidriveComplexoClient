@inherits LayoutComponentBase
<MudThemeProvider Theme="Default" />
<MudSnackbarProvider />

    <MudContainer MaxWidth="MaxWidth.Small" Style="height: 100vh" Class="d-flex align-center">
        <MudItem Class="d-flex flex-column">
            @Body
            <MudText Typo="Typo.subtitle1" Align="Align.Center">Arquivar.Net - @data</MudText>
        </MudItem>
    </MudContainer>

@code{
    string data = DateTime.Now.Year.ToString();
    MudTheme Default = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Blue.Default,
            Secondary = Colors.DeepPurple.Lighten1,
            Tertiary = Colors.Teal.Lighten1,
            AppbarBackground = Colors.Blue.Darken1,
            Background = "#ECF0F5",
            DrawerText = Colors.Grey.Darken4,
        },

    };
}

